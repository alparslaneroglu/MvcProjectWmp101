
@{
    ViewBag.Title = "Index2";
}

<h2>Index2</h2>
<h3>Razor ile Karar Yapıları</h3>

@{
    string[] names = new string[3] { "Furkan", "Alparslan", "Eroglu" };  //array yapıyoruz.
    int index = 0;

    foreach (string name in names)
    {
        @name
        <br />
    }
    <ul>
        @foreach (var name in names)
        {
            <li>@name</li>
        }

    </ul>
}
<br />
<br />
<ul>
    @foreach (string name in names)
    {
        <li>
            @if (index % 2 == 0)
            {
                <b>@name</b>
            }
            else
            {
                <i style="color:red; font-size:20px">@name</i>
            }
        </li>
        index++;
    }

</ul>
<br />
<br />

@for (int i = 0; i < 10; i++)
{

    <b style="color:blue"> @("Number is" )</b>
    if (i % 2 == 0)
    {
        <b style="color:red">@i</b>
    }
    else
    {
        <b style="color:green">@i</b>
    }
    <br />
}

@for (int i = 0; i < 100; i++)
{
    if (i % 2 == 0 & i % 3 == 0)
    {
        <b style="color:red">@i</b>
    }
    else
    {
        <b style="color:black">@i</b>
    }
}
